
@{
    ViewData["Title"] = "Create Customer Page";
}

@model CustomerModel

<style>
    .asp-validation-error {
        border-color: red;
    }
    input{
        width: 100%;
    }
</style>
<div class="text-center" asp-validation-summary="ModelOnly"></div>
        
    <h3>@ViewData["Title"] </h3>
    <form asp-action="addCustomers" method="post">
        <div class="form-group">
            <label >Name</label><br />
            <input asp-for="customerName" class="form-control" placeholder="John Doe"  />
            @*<span asp-validation-for="customerName" class="text-danger"></span>*@
        </div>
        <div class="form-group">
            <label >Address</label>
            <input asp-for="Address" class="form-control" placeholder="777 Chevy-View Street" />
           @* <span asp-validation-for="Address" class="text-danger"></span>*@
        </div>
        <h5 class="text-center text-danger" >@ViewBag.Message</h5>
        <button type="submit" class="btn btn-secondary" style="width:100%;">Create Customer</button>
    </form>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>


