
@{
    ViewData["Title"] = "Check IN Page";
}

@model checkOutModel

<style>
    .asp-validation-error {
        border-color: red;
    }

    input {
        width: 100%;
    }

    table {
        width: 100%;
    }

    th {
        height: 50px;
        text-align: center;
    }

    td {
        vertical-align: middle;
    }

    thead :hover, tbody :hover {
        background-color: #f2f2f2;
    }

    td, th {
        padding: 15px;
        border-bottom: 1px solid #ddd;
    }
    /*tr :nth-child(even){
        background-color:#f2f2f2;
    }*/
    thead {
        background-color: rgba(20, 20, 200, 0.5);
    }
</style>
<div class="text-center" asp-validation-summary="ModelOnly"></div>

<h3>@ViewData["Title"] </h3>
<form asp-action="checkIN" method="post">
    <div class="form-group">
        <label asp-for="custId">Customer ID</label><br />
        <input asp-for="custId" class="form-control" placeholder="1" />
        <span asp-validation-for="custId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VidID">Video ID</label>
        <input asp-for="VidID" class="form-control" placeholder="1" />
        <span asp-validation-for="VidID" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-secondary" style="width:100%;">Check IN Video</button>
</form>
<div>
        <h5 class="text-danger" style="text-align:center;">@ViewBag.Message</h5>
 </div>
<br />
<div class="text-center">
    <div class="row">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Format</th>
                    <th>Stock</th>
                </tr>
            </thead>
            <tbody>
                @foreach (videoModel video in (IEnumerable<videoModel>)ViewBag.Videos)
                {
                    <tr>
                        <td>@video.ID</td>
                        <td>@video.Title</td>
                        <td>@video.Format</td>
                        @if (video.Stock > 1)
                        {
                            <td>@video.Stock</td>
                        }
                        else
                        {
                            <td>-</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
<br />
    <div class="row">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CustomerModel customer in (IEnumerable<CustomerModel>)ViewBag.Customers)
                {
                    <tr>
                        <td>@customer.ID</td>
                        <td>@customer.customerName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>


